<% include partials/header %>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">9ja Restaurant</a>
            </div>
        </div>
    </nav>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Naija Restaurant Demo</h1>

            <p>This Repo was created to test Routing and not styling</p>
            <p>
                <a class="btn btn-primary btn-large" href="/restaurants/new">Add New Reataurant</a>
            </p>
        </div>
    </header>

    

   <div class="row text-center" style="display: flex; flex-wrap: wrap;"> 
        <% restaurants.forEach(function(restaurants){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= restaurants.image %>">
            </div>
            <div class="caption">
                <h4><%= restaurants.name %></h4>
            </div>
            
            

        </div>

        <% }); %>

   </div>
    
</div>
<% include partials/footer %>