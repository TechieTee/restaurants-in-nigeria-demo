<% include partials/header %>
   



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Naija Restaurant Demo</h1>

            <p>This Repo was created to test Routing and not styling</p>
            <p>
                <a class="btn btn-primary btn-large" href="/restaurants/new">Add New Reataurant</a>
            </p>
        </div>
    </header>

    

   <div class="row text-center" style="display: flex; flex-wrap: wrap;"> 
        <% restaurants.forEach(function(restaurant){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= restaurant.image %>">
            </div>
            <div class="caption">
                <h4><%= restaurant.name %></h4>
            </div>
            <p>
                <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">More Info</a>
            </p>

        </div>

        <% }); %>

   </div>
    
</div>
<% include partials/footer %>